<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=@list.image_url%>);">
  <div class="container text-center">
    <h1><%= @list.name %></h1>
    <h4>Add bookmarks and enjoy beautiful movies.</h4>
  </div>
</div>

<div class="container d-flex justify-content-around flex-wrap">
<% number = 0 %>
<% @list.bookmarks.each do |bookmark| %>
<div class="card col-4 m-4 rounded">
  <div class="card-body bg-black">
  <li><b>Bookmark <%= number+=1%>:</b> <%= bookmark.comment %></li>
  <li><%= bookmark.movie.title %></li>
    <%= link_to "",
    bookmark_path(bookmark),
    class: "fa-solid fa-trash-can",
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
  </div>
</div>
<% end %>
</div>




<div class="d-flex justify-content-center mb-3">
<a href="/lists/<%=@list.id%>/bookmarks/new"><button type="button" class="btn btn-danger text-white">Create a new Bookmark</button></a>
</div>

<div class="d-flex justify-content-center mb-3">
<a href="/lists"><button type="button" class="btn btn-danger text-white">Back to all lists</button></a>
</div>
