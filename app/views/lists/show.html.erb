<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=@list.image_url%>);">
  <div class="container text-center">
    <h1><%= @list.name %></h1>
    <h4>Add bookmarks and enjoy beautiful movies.</h4>
  </div>
</div>

<div class="container d-flex justify-content-around flex-wrap">
<% number = 0 %>
<% @list.bookmarks.each do |bookmark| %>
<div class="card col-4 m-4 rounded">
  <img class="card-img-top" style=" object-fit: cover; height: 16rem;" src="<%=bookmark.movie.poster_url%>" alt="Card image cap">
  <div class="card-body bg-black">
  <li><b>Bookmark: <%= number+=1%>:</b> <%= bookmark.comment %></li>
  <li><b>Movie:</b> <%= bookmark.movie.title %></li>
  <div class="d-flex align-items-end flex-column p-2">
    <%= link_to "",
    bookmark_path(bookmark),
    class: "fa-solid fa-trash-can text-danger float-left",
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  </div>
  </div>
</div>
<% end %>
</div>



<div class="d-flex justify-content-center m-3">
<a href="/lists/<%=@list.id%>/bookmarks/new"><button type="button" class="btn btn-danger text-white m-3">Create a new Bookmark</button></a>
<a href="/lists"><button type="button" class="btn btn-danger text-white m-3">Back to all lists</button></a>
</div>

<div class="d-flex justify-content-center mb-3">
</div>
